<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="tabRedLine" label="RedLine">
        <group id="grpScan"
               label="Scan">
          <button id="btnStartScan"
                  label="Start Scan"
                  getImage="GetButtonImage"
                  onAction="OnStartScanClicked"
                  size="large"/>
          <checkBox id="cbShowPanel"
                    label="Show Panel"
                    getPressed="GetShowPanelChecked"
                    onAction="ShowPanelChecked"/>
        </group>
        <group id="grpStats"
               label="Stats">
          <button id="btnHistogram"
                  label="Histogram"
                  onAction="OnHistogramClicked"
                  size="large"/>
        </group>
      </tab>
    </tabs>
  </ribbon>

  <contextMenus>
    <contextMenu idMso="ContextMenuText">
      <button id="AddCrutchWordButtonText"
              label="Add Crutch Word"
              insertBeforeMso="HyperlinkInsert"
              onAction="AddCrutchWord"
              getImage="GetMenuItemImage"
              getEnabled="CanAddCrutchWord"/>
    </contextMenu>
  
    <contextMenu idMso="ContextMenuComment">
      <button id="AddCrutchWordButtonComment"
              label="Add Crutch Word"
              insertBeforeMso="HyperlinkInsert"
              onAction="AddCrutchWord"
              getImage="GetMenuItemImage"
              getEnabled="CanAddCrutchWord"/>
    </contextMenu>
  
    <contextMenu idMso="ContextMenuRevision">
      <button id="AddCrutchWordButtonRevision"
              label="Add Crutch Word"
              insertBeforeMso="HyperlinkInsert"
              onAction="AddCrutchWord"
              getImage="GetMenuItemImage"
              getEnabled="CanAddCrutchWord"/>
    </contextMenu>
  </contextMenus>
</customUI>

